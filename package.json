{
    "name": "api.operifysuite",
    "version": "1.0.0",
    "description": "expressjs typescript boilerplate with prisma",
    "main": "./src/server.ts",
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    },
    "scripts": {
        "dev": "nodemon -r tsconfig-paths/register src/server.ts",
        "prebuild": "npm run clean:build",
        "build": "npm run build && npm run start",
        "start": "node dist/server.js",
        "clean:build": "rm -rf dist",
        "seed": "ts-node prisma/seed.ts",
        "generate": "npx prisma generate",
        "migrate": "npx prisma migrate dev --name",
        "migrate:deploy": "npx prisma migrate deploy",
        "migrate:fresh": "npx prisma migrate reset --force",
        "prisma:studio": "npx prisma studio",
        "pretty": "prettier --write \"./**/*.{js,jsx,mjs,cjs,ts,tsx,json}\"",
        "format": "prettier --ignore-path .prettierignore --write \"**/*.+(ts|js)\""
    },
    "author": "Fathi Redaallah",
    "engines": {
        "node": ">=18.0.0"
    },
    "keywords": [
        "NodeJS",
        "TypeScript",
        "express",
        "prisma"
    ],
    "license": "MIT",
    "dependencies": {
        "@prisma/client": "^5.14.0",
        "bcrypt": "^5.1.1",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.20.2",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-rate-limit": "^7.2.0",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "prisma": "^5.14.0",
        "reflect-metadata": "^0.2.2",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "uuid": "^9.0.1",
        "x-xss-protection": "^2.0.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@faker-js/faker": "^8.4.1",
        "@tsconfig/node16": "^16.1.3",
        "@tsconfig/recommended": "^1.0.6",
        "@types/bcryptjs": "^2.4.6",
        "@types/body-parser": "^1.19.5",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/csurf": "^1.11.5",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^20.12.12",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.6",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^7.10.0",
        "@typescript-eslint/parser": "^7.10.0",
        "eslint": "^8.57.0",
        "nodemon": "^3.1.1",
        "prettier": "^3.0.1",
        "typescript": "^5.4.5"
    }
}